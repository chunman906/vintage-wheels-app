  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@car.photo_url%>)">
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
      <h1><%="#{@car.brand} #{@car.model}, #{@car.year}"%></h1>
      <br>
      <h2><%= ['A timeless classic', 'The hottest wheels in town', 'Impress everyone', 'What a vintage car should be', 'The epitome of vintage charm', 'Ride it like you stole it', "You're gonna look great in this car", 'Wolf of Wall Street vibes'].sample %></h2>
      <br>
    </div>
  </div>

  <p style="color: green"><%= notice %></p>

  <div class="container booking-page">
    <div class="car-card flex-container" style = "margin-right: 50px">
      <ul style="list-style: none">
        <h1>Car Details</h1>

        <li><%= "<b>Brand</b>: #{@car.brand}".html_safe %></li>
        <li><%= "<b>Model</b>: #{@car.model}".html_safe %></li>
        <li><%= "<b>Year</b>: #{@car.year}".html_safe %></li>
        <li><%= "<b>Color</b>: #{@car.color}".html_safe %></li>
        <li><%= "<b>Location</b>: #{@car.location}".html_safe%></li>
        <br>
        <li><%= "<b>Description</b>: <em>#{@car.description}</em>".html_safe%></li>
        <br>
        <li style="<b></b>"><b><%= "Â£#{@car.price.round} per day".html_safe %></b></li>
      </ul>
    </div>

    <div class="container" style = "margin-left: 50px">
      <h1 class='mb-3 text-primary display-6 text-black'><strong>Enter Booking Details</strong></h1>
      <%= simple_form_for([@car, @booking]) do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :special_request %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <br>
<hr>

  <div class="container review-card">
    <div class="container">
       <h1 class='mb-6 text-primary display-6 text-black' ><strong>Leave your review here</strong></h1>
        <%= simple_form_for([@car, @review]) do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
    </div>
    <div class = "container" style = "margin-left: 75px">
      <h1 class='text-primary display-6 text-black' ><strong>User Reviews</strong></h1>
      <% @reviews.each do |review|  %>
        <b>Rating:</b> <%= review.rating %>
        <br>
        <b>Comment:</b> <%= review.content %>
        <br>
        <br>
      <% end %>
    </div>
  </div>
  <br>
  <br>
  <br>
