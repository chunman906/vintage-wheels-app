<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://d2gg9evh47fn9z.cloudfront.net/800px_COLOURBOX20188728.jpg" %> Vintage Wheels
    <% end %>

    <%= simple_form_for :search, url: cars_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input placeholder="Enter your location or postcode" class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://mpng.subpng.com/20190227/zox/kisspng-clip-art-computer-icons-openclipart-user-vector-gr-my-svg-png-icon-free-download-14-352-onlinewe-5c7704f7cff2b1.3948772115513039278518.jpg" />
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/my_bookings">View Bookings</a>
                <a class="dropdown-item" href="/users/index">View Garage</a>
                <a class="dropdown-item" href="/users/sign_out">Sign Out</a>
              </div>
            </li>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.carcovers.com/media/carcover/resource/classiccar.jpg);">
  <div class="container">
  <br>
  <br>
    <h1><strong><em>Vintage Wheels</em></strong></h1>
    <br>
    <h2><strong>Exclusive vintage cars for car lovers ❤️</strong></h2>
    <p>Explore Europe's largest vintage & classic car sharing marketplace</p>
    <br>
  </div></center>
</div>

<div class="container">
  <br>
  <center><%= link_to "View our entire fleet", cars_path, class: "mt-3 btn btn-primary btn-lg"%></center>
  <div class="container mt-5">
    <div class="cards">
      <% @cars.each_with_index do |car, index| %>
        <% if (index < 3) %>
          <div class="card">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)),
            url(<%=car.photo_url%>)">
            </div>
            <div class="card-body d-flex flex-column">
            <center><h5 class="card-title"><%= link_to "#{car.brand} #{car.model}", car_path(car) %></h5></center>
            <p class="card-text text-justify"><%= car.description %></p>
            <%= link_to "£#{car.price.round} per day! <b>BOOK ME</b>".html_safe, car_path(car), class: "mt-auto btn btn-primary"%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

